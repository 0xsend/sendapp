# shellcheck shell=bash
use flake
dotenv_if_exists .env
dotenv_if_exists .env.local

# Check for localnet environment (dynamic ports for multi-localnet support)
if [[ -f .localnet.env ]]; then
  dotenv .localnet.env
else
  log_status "No .localnet.env found. Run: bun run bin/gen-env.ts"
fi

source_env_if_exists .envrc.private
layout node
