{
  "name": "@my/workflows",
  "version": "0.0.9",
  "files": [
    "package.json",
    "src"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./all-activities": {
      "types": "./src/all-activities.ts",
      "default": "./src/all-activities.ts"
    },
    "./utils": {
      "types": "./src/utils/index.ts",
      "default": "./src/utils/index.ts"
    },
    "./utils/*": {
      "types": "./src/utils/*",
      "default": "./src/utils/*"
    },
    "./all-workflows": {
      "types": "./src/all-workflows.ts",
      "default": "./src/all-workflows.ts"
    },
    "./workflow-bundle": {
      "default": "./dist/workflow-bundle.js"
    },
    "./version": {
      "types": "./src/version.ts",
      "default": "./src/version.ts"
    }
  },
  "scripts": {
    "lint": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:anvil": "vitest run --config vitest.anvil.config.ts",
    "test:anvil:watch": "vitest --config vitest.anvil.config.ts",
    "test:all": "vitest run && vitest run --config vitest.anvil.config.ts",
    "test:coverage": "vitest run --coverage",
    "build": "yarn bundle",
    "clean": "rm -rf dist",
    "bundle": "node --loader ts-node/esm src/scripts/build-workflow-bundle.ts"
  },
  "devDependencies": {
    "@morpho-org/test": "^2.6.6",
    "@temporalio/testing": "^1.11.7",
    "@types/source-map-support": "^0",
    "@types/web-push": "^3.6.4",
    "@vitest/coverage-v8": "^2.1.8",
    "dotenv-cli": "^7.3.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "@my/supabase": "workspace:*",
    "@my/wagmi": "workspace:*",
    "@supabase/supabase-js": "^2.49.8",
    "@temporalio/activity": "^1.11.7",
    "@temporalio/workflow": "^1.11.7",
    "@wagmi/core": "^2.16.7",
    "app": "workspace:*",
    "permissionless": "^0.1.49",
    "viem": "^2.27.2",
    "wagmi": "^2.14.16",
    "web-push": "^3.6.7"
  }
}
