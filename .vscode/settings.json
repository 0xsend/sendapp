{
  "editor.formatOnSave": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": "package-lock.json, yarn.lock, bun.lockb",
    "*.js": "${capture}.js.map, ${capture}.d.ts, ${capture}.d.ts.map",
    "*.ts": "$(capture).test.ts, $(capture).test.node.ts, $(capture).test.native.ts, $(capture).test.ios.ts, $(capture).test.web.ts, $(capture).test.android.ts, ${capture}.native.ts, ${capture}.ios.ts, ${capture}.android.ts, ${capture}.web.ts, ${capture}.stories.ts, ${capture}.example.ts",
    "*.tsx": "$(capture).test.tsx,$(capture).skiptest.tsx,$(capture).test.node.tsx,$(capture).test.native.tsx,$(capture).test.ios.tsx,$(capture).test.web.tsx,$(capture).test.android.tsx,${capture}.native.tsx,${capture}.ios.tsx,${capture}.android.tsx,${capture}.web.tsx,${capture}.stories.tsx,${capture}.example.tsx"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "never"
  },
  "[solidity]": {
    "editor.defaultFormatter": "JuanBlanco.solidity",
    // solidity format is way too slow or sometimes doesn't work
    // format using the command line for now.
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false
  },
  "solidity.linter": "solhint",
  "solidity.compileUsingRemoteVersion": "v0.8.23+commit.f704f362",
  "solidity.formatter": "forge",
  "solidity.monoRepoSupport": false,
  "solidity.remappings": [
    "account-abstraction/=packages/contracts/lib/account-abstraction/contracts/",
    "ds-test/=packages/contracts/lib/forge-std/lib/ds-test/src/",
    "forge-std/=packages/contracts/lib/forge-std/src/",
    "openzeppelin-contracts/=packages/contracts/lib/openzeppelin-contracts/",
    "@openzeppelin/contracts/=packages/contracts/lib/openzeppelin-contracts/contracts/",
    "openzeppelin-contracts-upgradeable/=packages/contracts/lib/openzeppelin-contracts-upgradeable/",
    "p256-verifier/=packages/contracts/lib/p256-verifier/src/",
    "@uniswap/=./node_modules/@uniswap/"
  ],
  "sqlfluff.config": "supabase/sqlfluff.cfg",
  "nix.formatterPath": "alejandra"
}
