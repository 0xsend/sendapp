{
  "functions": {
    "pages/api/trpc/**": {
      "maxDuration": 90
    }
  },
  "crons": [
    {
      "path": "/api/cron/enrich-token-data",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/discover-tokens",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/bootstrap-balances",
      "schedule": "0 3 * * *"
    }
  ],
  "headers": [
    {
      "source": "/.well-known/apple-app-site-association",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
